  var myDate = new Date();

  var days= ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
  var time= myDate.getHours()>=12 ? 'PM' : 'AM';
  var hours=myDate.getHours()>=12 ? (24-myDate.getHours()) : (myDate.getHours());
  alert("Today is "+days[myDate.getDay()]+"\nCurrent time is : "+hours+" "+time+" : "+myDate.getMinutes()+" : "+myDate.getSeconds());
</script>
